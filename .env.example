# UnderCurrent - Environment Variables
# Copy this file to .env and fill in your actual values
# NEVER commit .env to git!

# ============================================================================
# Garmin Connect API Credentials
# ============================================================================
# Get these from: https://developer.garmin.com/gc-developer-program/
# Required for fetching HRV, Body Battery, sleep, and other health data

GARMIN_API_KEY=your_garmin_consumer_key_here
GARMIN_API_SECRET=your_garmin_consumer_secret_here

# OAuth 2.0 Callback URL (must match what you registered with Garmin)
GARMIN_OAUTH_CALLBACK=http://localhost:4777/api/auth/garmin/callback

# ============================================================================
# Backend Server Configuration
# ============================================================================

# Server host and port
SERVER_HOST=0.0.0.0
SERVER_PORT=4777

# Environment: development, production
ENVIRONMENT=development

# Secret key for JWT tokens (generate with: openssl rand -hex 32)
SECRET_KEY=your_secret_key_here_generate_with_openssl_rand_hex_32

# ============================================================================
# Database Configuration
# ============================================================================

# SQLite database path (relative to project root)
DATABASE_URL=sqlite:///./cfs_hrv.db

# For PostgreSQL in production (Phase 2):
# DATABASE_URL=postgresql://username:password@localhost:5432/undercurrent

# ============================================================================
# SSL/TLS Configuration
# ============================================================================

# Paths to SSL certificates (for HTTPS)
SSL_CERT_PATH=certs/cert.pem
SSL_KEY_PATH=certs/key.pem

# ============================================================================
# Optional: Logging and Monitoring
# ============================================================================

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Sentry DSN for error tracking (optional, Phase 2)
# SENTRY_DSN=https://your_sentry_dsn_here
